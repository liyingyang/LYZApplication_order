<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.Nav" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--base Activity theme-->
    <style name="BaseActivityTheme" parent="MyBaseActivityTheme" />

    <style name="MyBaseActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Navbar.Nav" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/theme</item>
    </style>

    <style name="BaseEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/base_hint_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/base_padding</item>
        <item name="android:paddingTop">@dimen/base_edittext_padding</item>
        <item name="android:paddingBottom">@dimen/base_edittext_padding</item>
    </style>

</resources>
